<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_below="@+id/yellow"
        android:layout_toEndOf="@+id/yellow"
        android:layout_marginStart="33dp" />

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:format="00:00:00"
        android:textAlignment="center"
        android:textSize="120sp"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="82dp"
        android:background="@drawable/progress_custom"
        android:layout_marginBottom="54dp"
        android:layout_above="@+id/yellow"
        android:layout_alignEnd="@+id/timer" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="70%"
        android:textSize="30sp"
        android:layout_alignTop="@+id/progressBar"
        android:layout_alignEnd="@+id/orange"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/textMCI"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_toStartOf="@+id/progressBar"
        android:text="MCI:"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="221dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/textMCI"
        android:text="Yellow" />

    <Button
        android:id="@+id/red"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/orange"
        android:layout_alignBottom="@+id/orange"
        android:layout_toEndOf="@+id/orange"
        android:text="Red" />

    <Button
        android:id="@+id/orange"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/yellow"
        android:layout_alignBottom="@+id/yellow"
        android:layout_toEndOf="@+id/yellow"
        android:text="Orange" />

</RelativeLayout>